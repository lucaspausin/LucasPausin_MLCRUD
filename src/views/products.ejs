<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%- include('partials/head', {title: 'Todos los productos'}) %>
	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
		<!-- /Header -->

		<!-- todos los productos -->
		<div class="container products-wrapper">
			<div class="row">
				<% if (selectedCategory === "in-sale") { %>
				<div class="col-12">
					<h2 class="products-title">Ofertas</h2>
				</div>
				<% } else { %>
				<div class="col-12">
					<h2 class="products-title">Todos los productos</h2>
				</div>
				<% } %> <% products.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<%- include('partials/productCard',{ ...product }) %>
				</div>
				<% }) %>
			</div>
		</div>
		<!-- /todos los productos -->

		<!-- footer -->
		<%- include('partials/footer') %>
		<!-- /footer -->
	</body>
</html>
